# 本地开发环境配置
# 复制此文件为 .env.local 开始开发

# 开发模式设置
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 翻译服务配置
# 使用真实的Hugging Face Space API
USE_MOCK_TRANSLATION=false
NLLB_SERVICE_URL=https://wane0528-my-nllb-api.hf.space/api/v4/translator
NLLB_SERVICE_TIMEOUT=60000

# Hugging Face API配置
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models
NLLB_MODEL=facebook/nllb-200-distilled-600M
NLLB_MAX_LENGTH=1000
NLLB_TEMPERATURE=0.3
NLLB_TIMEOUT=30000

# 文件处理服务配置
FILE_SERVICE_URL=http://localhost:8000
FILE_MAX_SIZE=52428800
FILE_MAX_PAGES=100

# TTS配置（可选）
TTS_PROVIDER=edge-speech
TTS_VOICE=en-US-AriaNeural

# Supabase配置
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# 调试配置
DEBUG=false
LOG_LEVEL=info 