# 本地开发环境配置
# 复制此文件为 .env.local 开始开发

# 开发模式设置
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 翻译服务配置
# 选项1: 使用Mock模式（无需API key，立即可用）
USE_MOCK_TRANSLATION=true

# 选项2: 使用真实的Hugging Face API
# HUGGINGFACE_API_KEY=your_api_key_here
# USE_MOCK_TRANSLATION=false

# Hugging Face API配置
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models
NLLB_MODEL=facebook/nllb-200-distilled-600M
NLLB_MAX_LENGTH=1000
NLLB_TEMPERATURE=0.3
NLLB_TIMEOUT=30000

# 文件处理服务配置
FILE_SERVICE_URL=http://localhost:3010
FILE_MAX_SIZE=52428800
FILE_MAX_PAGES=100

# TTS配置（可选）
TTS_PROVIDER=edge-speech
TTS_VOICE=en-US-AriaNeural

# 调试配置
DEBUG=false
LOG_LEVEL=info 