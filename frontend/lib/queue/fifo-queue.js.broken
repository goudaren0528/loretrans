    const finalResult = translatedChunks.join(' ')
    console.log(`[FIFO Queue] æ–‡æœ¬ç¿»è¯‘å®Œæˆ: ${successCount}/${chunks.length} å—æˆåŠŸç¿»è¯‘`)
    
