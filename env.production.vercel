# Vercel生产环境配置 - 复制到Vercel Dashboard的Environment Variables

# 应用基础配置
NEXT_PUBLIC_APP_URL=https://your-app-name.vercel.app
NODE_ENV=production

# 🔑 关键：禁用本地NLLB服务，强制使用Hugging Face API
NLLB_LOCAL_ENABLED=false
USE_MOCK_TRANSLATION=false

# Hugging Face API配置 (必需)
HUGGINGFACE_API_KEY=hf_your_token_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models
NLLB_MODEL=facebook/nllb-200-distilled-600M
NLLB_MAX_LENGTH=1000
NLLB_TEMPERATURE=0.3
NLLB_TIMEOUT=30000

# Vercel KV Redis配置 (推荐，用于缓存)
KV_REST_API_URL=https://your-kv-endpoint.upstash.io
KV_REST_API_TOKEN=your_kv_token_here
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 文件处理配置
FILE_MAX_SIZE=52428800
FILE_MAX_PAGES=100
FILE_UPLOAD_PATH=/tmp/uploads
FILE_SERVICE_SECRET=your-production-secret-key-32-chars-minimum
FILE_SERVICE_TIMEOUT=60000

# TTS 服务配置
TTS_PROVIDER=edge-speech
TTS_VOICE=en-US-AriaNeural
TTS_RATE=1.0
TTS_PITCH=1.0

# 邮件服务配置 (可选)
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_your_resend_key_here
EMAIL_FROM=noreply@your-domain.com

# 限流配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 安全配置 (必需 - 生成强密钥)
JWT_SECRET=your-very-secure-jwt-secret-at-least-32-characters-long
ENCRYPTION_KEY=your-very-secure-encryption-key-32-chars-long

# 调试配置
DEBUG=false
LOG_LEVEL=info

# Supabase配置 (如果使用数据库)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key 