# 应用基础配置
NEXT_PUBLIC_APP_URL=https://transly.app
NODE_ENV=development

# Hugging Face API配置
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models
NLLB_MODEL=facebook/nllb-200-distilled-600M
NLLB_MAX_LENGTH=1000
NLLB_TEMPERATURE=0.3
NLLB_TIMEOUT=30000

# Vercel KV (Redis) 配置
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# MongoDB 配置 (可选)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net
MONGODB_DB_NAME=transly

# 文件处理配置
FILE_MAX_SIZE=52428800
FILE_MAX_PAGES=100
FILE_UPLOAD_PATH=/tmp/uploads
FILE_SERVICE_URL=http://localhost:8000
FILE_SERVICE_SECRET=your-secure-secret-key
FILE_SERVICE_TIMEOUT=60000

# TTS 服务配置
TTS_PROVIDER=edge-speech
TTS_VOICE=en-US-AriaNeural
TTS_RATE=1.0
TTS_PITCH=1.0

# 邮件服务配置
EMAIL_PROVIDER=resend
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@transly.app

# 支付服务配置
CREEM_API_KEY=your_creem_api_key
CREEM_WEBHOOK_SECRET=your_creem_webhook_secret

# 限流配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 安全配置
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# 开发/调试配置
DEBUG=false
LOG_LEVEL=info 